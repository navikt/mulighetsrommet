{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "mulighetsrommet-api/src/main/resources/web/openapi.yml"
      ],
      "env": [
        "VITE_MULIGHETSROMMET_API_MOCK",
        "VITE_MULIGHETSROMMET_API_BASE",
        "VITE_BASE",
        "mulighetsrommet-api/src/main/resources/web/openapi.yml"
      ]
    },
    "mulighetsrommet-api-client#build": {
      "inputs": ["mulighetsrommet-api/src/main/resources/web/openapi.yml"]
    },
    "test:ci": {
      "dependsOn": ["^build"]
    },
    "build:mock": {
      "dependsOn": ["^build"]
    },
    "build:labs": {
      "dependsOn": ["^build"]
    },
    "build:preprod": {
      "dependsOn": [
        "^build",
        "mulighetsrommet-api/src/main/resources/web/openapi.yml"
      ],
      "env": ["mulighetsrommet-api/src/main/resources/web/openapi.yml"]
    },
    "lint": {
      "outputs": []
    },
    "mulighetsrommet-cms#deploy": {
      "dependsOn": ["build"],
      "env": ["SANITY_AUTH_TOKEN"]
    },
    "dev": {
      "cache": false
    }
  }
}
